<Page x:Class="WpfApplication1.Views.PushUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PushUpPage">
    <Grid>
        <!-- Camera image as the background -->
        <Image Name="CameraImage" Stretch="Fill" />

        <!-- Skeleton overlay -->
        <Canvas Name="SkeletonCanvas"
                Background="Transparent"
                IsHitTestVisible="False"/>

        <!-- Feedback text -->
        <TextBlock Name="FeedbackText"
                   Foreground="White"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   Text="Ready for push-ups!" />

        <!-- Push-up count text -->
        <TextBlock Name="PushUpCountText"
                   Foreground="Yellow"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,30"
                   Text="Push-Ups: 0" />
    </Grid>
</Page>